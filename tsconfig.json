{
    "compilerOptions": {
        "module": "amd",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "skipLibCheck": true,
        "target": "es6",
        "lib": [
            "es2016",
            "dom",
            "es2015.iterable"
        ],
        "outDir": "src/js",
        "types": [
            // add node as an option
            "node"
        ]
    },
    "files": [
        "./node_modules/phaser-ce/typescript/phaser.comments.d.ts",
        "./node_modules/@types/requirejs/index.d.ts"
    ],
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}